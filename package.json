{
  "name": "tourist-safety-platform",
  "version": "1.0.0",
  "description": "MERN Stack Tourist Safety Platform for Government of India",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd backend && npm run dev",
    "client": "vite",
    "build": "npm run build:client && npm run build:server",
    "build:client": "vite build",
    "build:server": "echo Skipping backend build (no build step)",
    "start": "cd backend && npm start",
    "install:all": "npm install && cd backend && npm install",
    "test": "npm run test:client && npm run test:server",
    "test:client": "vitest",
    "test:server": "cd backend && npm test",
    "lint": "npm run lint:client && npm run lint:server",
    "lint:client": "eslint . --ext ts,tsx --report-unused-disable-directives",
    "lint:server": "echo Skipping backend lint (no lint configured)"
  },
  "keywords": [
    "tourist",
    "safety",
    "iot",
    "government",
    "monitoring",
    "mern",
    "react",
    "nodejs",
    "mongodb"
  ],
  "author": "Government of India - Ministry of Tourism",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react-router-dom": "^5.3.3",
    "@vitejs/plugin-react-swc": "^3.11.0",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "eslint": "^9.35.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "jsdom": "^26.1.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "tailwindcss-animate": "^1.0.7",
    "typescript-eslint": "^8.42.0",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gov-india/tourist-safety-platform.git"
  },
  "bugs": {
    "url": "https://github.com/gov-india/tourist-safety-platform/issues"
  },
  "homepage": "https://touristsafety.gov.in",
